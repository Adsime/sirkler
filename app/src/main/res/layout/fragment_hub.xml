<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1.2">

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:text="Sirkler"
        android:textSize="50dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>
    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:text="- En enklere reisehverdag for alle!"
        android:fontFamily="serif"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
    <Button
        android:id="@+id/quicktrip"
        android:background="@color/button_theme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="serif"
        android:layout_weight="0.3"
        android:paddingTop="10dp"
        android:text="Hurtigtur"
        android:drawableTop="@mipmap/running_icon"/>
    <Button
        android:id="@+id/savedtrips"
        android:background="@color/middle_blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:paddingTop="10dp"
        android:fontFamily="serif"
        android:text="Lagrede turer"
        android:drawableTop="@mipmap/folder_icon"/>
    <Button
        android:id="@+id/location"
        android:background="@color/light_blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:paddingTop="10dp"
        android:fontFamily="serif"
        android:text="Lokasjon"
        android:drawableTop="@mipmap/location_icon"/>




</LinearLayout>
